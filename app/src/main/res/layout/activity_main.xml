    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/webview.xml">

<WebView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
